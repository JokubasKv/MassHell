<Window x:Class="MassHell_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MassHell_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Canvas x:Name="MainPanel" Keyboard.KeyDown="MainPanel_KeyDown" Keyboard.KeyUp="MainPanel_KeyUp" Background="LightBlue"
            Focusable="True">
        <TextBox x:Name="Text" Height='100' Width="100" Canvas.Left="425" Canvas.Top="44"></TextBox>
        <Rectangle x:Name="Player1" Height="100" Width="100" Canvas.Left="625" Canvas.Top="44" Fill="Chocolate"></Rectangle>
        <Image x:Name="Player11" Source="Images/Varn_token.png" Height='100' Width="100" Canvas.Left="625" Canvas.Top="44" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Canvas>
</Window>
